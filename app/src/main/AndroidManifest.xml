<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.asdproject">
    <!--  REQUIRED FOR FIREBASE / FIRESTORE -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional but recommended -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Camera for Step 5 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Allow install on devices without a camera -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASDProject"
        tools:targetApi="31">

        <!-- Step 6 (use the REAL class name) -->
        <activity
            android:name=".view.activities.Step6ForTasksActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".view.activities.ChildLogsHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ChildTasksActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ChildTaskDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ReportsHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.TherapistNotesActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.NewTaskActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.NewReportActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.EmotionHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ParentHomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ParentLoginActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAPS_API_KEY}" />

        <activity
            android:name=".view.activities.RoleSelectionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ChildHomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.EmotionLogActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ChildHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.EmotionDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.SelectionHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ChildCalmingToolsActivity"
            android:exported="false" />
        <service
            android:name=".notifications.ChildFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>