<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E3F4F4"
    android:padding="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/child_panel_background"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How did you feel?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#085F63"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose"
                    android:textSize="14sp"
                    android:textColor="#51787C"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Feelings Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <!-- FEELING BUTTON TEMPLATE (reused below) -->
                    <!-- Each item is: 120dp tall, equal width, clickable, centered -->

                    <!-- Happy -->
                    <LinearLayout
                        android:id="@+id/btnHappy"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Happy"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Sad -->
                    <LinearLayout
                        android:id="@+id/btnSad"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sad"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Angry -->
                    <LinearLayout
                        android:id="@+id/btnAngry"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Angry"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Surprised -->
                    <LinearLayout
                        android:id="@+id/btnSurprised"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surprised"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Afraid -->
                    <LinearLayout
                        android:id="@+id/btnScared"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Afraid"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Disgust -->
                    <LinearLayout
                        android:id="@+id/btnDisgust"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disgust"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Unsure -->
                    <LinearLayout
                        android:id="@+id/btnUnsure"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unsure"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Other -->
                    <LinearLayout
                        android:id="@+id/btnOtherFeeling"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/feeling_button_selector">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textColor="#085F63"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</ScrollView>
