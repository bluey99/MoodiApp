<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F1"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Yellow header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#F9E28C"
            android:gravity="center_vertical"
            android:paddingLeft="24dp">

            <TextView
                android:id="@+id/txtDetailEmotionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Feeling"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#4C5257"/>
        </LinearLayout>

        <!-- Emotion icon -->
        <ImageView
            android:id="@+id/imgDetailEmotion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_child"/>

        <!-- Intensity -->
        <TextView
            android:id="@+id/txtDetailIntensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intensity: 5"
            android:textSize="18sp"
            android:textColor="#085F63"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/txtDetailTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Feb 2025, 14:07"
            android:textSize="16sp"
            android:textColor="#4C5257"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#85C1C1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <!-- Note -->
        <TextView
            android:id="@+id/txtDetailNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Today I felt..."
            android:textSize="18sp"
            android:textColor="#4C5257"
            android:padding="8dp"
            android:background="@drawable/card_child_button"/>

    </LinearLayout>
</ScrollView>
