<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F1"
    tools:context=".view.activities.RoleSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In to Moodi"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4C5257"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where emotions make sense — together."
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select who you are to log in"
            android:textSize="16sp"
            android:textColor="#4C5257"
            android:layout_marginTop="40dp" />

        <!-- CHILD -->
        <LinearLayout
            android:id="@+id/btnChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/role_card"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_child" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child"
                android:textSize="18sp"
                android:textColor="#4C5257"
                android:paddingLeft="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- PARENT -->
        <LinearLayout
            android:id="@+id/btnParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/role_card"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:textSize="18sp"
                android:textColor="#4C5257"
                android:paddingLeft="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- SIGN UP -->
        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don’t have an account? Sign Up"
            android:textColor="#3454DC"
            android:textSize="14sp"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>
