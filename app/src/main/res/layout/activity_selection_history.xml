<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F6F7">

    <!-- TITLE -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_marginTop="50dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutHistoryPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.15"/>

    <!-- SUBTITLE -->
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose which history you want to view"
        android:textSize="16sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CENTER PANEL -->
    <LinearLayout
        android:id="@+id/layoutHistoryPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/child_panel_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnGoBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <!-- Child Logs -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChildHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_child_button"
            android:drawableStart="@drawable/ic_history_24"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="Child Check-ins\nEmotions logged by the child"
            android:textAllCaps="false"
            android:textColor="#085F63"
            android:textSize="16sp"
            app:backgroundTint="@null"/>

        <!-- Tasks & Therapist Logs -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTaskHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_child_button"
            android:drawableStart="@drawable/task_icsize"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="Parent and Therapist Tasks\nEmotions logged for requested tasks"
            android:textAllCaps="false"
            android:textColor="#085F63"
            android:textSize="16sp"
            app:backgroundTint="@null"/>

    </LinearLayout>

    <!-- GO BACK (BOTTOM CENTER) -->
    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â† Go Back"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:backgroundTint="#C7F0CF"
        android:paddingHorizontal="28dp"
        android:paddingVertical="10dp"
        app:cornerRadius="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>