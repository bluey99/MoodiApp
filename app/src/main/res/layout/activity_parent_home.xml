<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F6F7">

    <!-- â­ CHILD BAR â€“ EMPTY, FILLED BY CODE â­ -->
    <HorizontalScrollView
        android:id="@+id/childScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/childContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <!-- â­ CURRENT CHILD LABEL â­ -->
    <TextView
        android:id="@+id/txtCurrentChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No child selected"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/childScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Parent Avatar -->
    <ImageView
        android:id="@+id/imgParentAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_parent"
        android:contentDescription="parent avatar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentChild"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bell -->
    <ImageView
        android:id="@+id/btnBell"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/notfication_ic"
        android:contentDescription="Notifications"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentChild"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”´ Red Dot (Notification Badge) -->
    <View
        android:id="@+id/notifDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/red_dot"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/btnBell"
        app:layout_constraintEnd_toEndOf="@id/btnBell"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp" />

    <!-- MAIN CONTENT -->
    <ScrollView
        android:id="@+id/scrollHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/imgParentAvatar"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Welcome -->
            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹ Welcome!"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtTaskNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_card_pg"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="Child finished the task..."
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtSubWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your child's emotions and scenarios below."
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Parent Panel -->
            <LinearLayout
                android:id="@+id/layoutParentPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/child_panel_background"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- View History -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnViewHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_child_button"
                    android:drawableStart="@drawable/ic_history_24"
                    android:drawablePadding="12dp"
                    android:drawableTint="#085F63"
                    android:gravity="start|center_vertical"
                    android:padding="20dp"
                    android:text="View History\nSee your child's past feelings"
                    android:textAllCaps="false"
                    android:textColor="#085F63"
                    android:textSize="16sp"
                    app:backgroundTint="@null"/>

                <!-- Add Report -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_child_button"
                    android:drawableStart="@drawable/report_icsize"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:padding="20dp"
                    android:text="Add Report\nRecord a new entry"
                    android:textAllCaps="false"
                    android:textColor="#085F63"
                    android:textSize="16sp"
                    app:backgroundTint="@null"/>

                <!-- Add Task -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_child_button"
                    android:drawableStart="@drawable/task_icsize"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:padding="20dp"
                    android:text="Add Task\nCreate tasks for your child"
                    android:textAllCaps="false"
                    android:textColor="#085F63"
                    android:textSize="16sp"
                    app:backgroundTint="@null"/>

                <!-- Therapist Notes -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTherapistNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_child_button"
                    android:drawableStart="@drawable/notes_icsize"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:padding="20dp"
                    android:text="Therapist Notes\nReview therapist feedback"
                    android:textAllCaps="false"
                    android:textColor="#085F63"
                    android:textSize="16sp"
                    app:backgroundTint="@null"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="Log Out"
        android:textColor="@color/black"
        android:background="@drawable/btn_login_rounded"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>
