<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F4F4"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="24dp">

        <!-- MAIN CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/child_panel_background"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can you tell me what happened?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#085F63"
                android:layout_marginBottom="8dp" />

            <!-- Gentle helper text -->
            <TextView
                android:id="@+id/txtHelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can write it in your own words ðŸ˜Š"
                android:textSize="14sp"
                android:textColor="#51787C"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- Input field -->
            <EditText
                android:id="@+id/editCustomSituation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What happened?"
                android:background="@drawable/child_input_box"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="#085F63"
                android:textColorHint="#7FB7BB"
                android:gravity="top|start"
                android:minHeight="120dp"
                android:maxLines="5"
                android:overScrollMode="never"
                android:inputType="textMultiLine"
                android:importantForAutofill="no" />


        </LinearLayout>

        <!-- CONTINUE BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmCustomSituation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#085F63"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pill_button_selector"
            android:enabled="false"
            android:alpha="0.4" />

    </LinearLayout>

</ScrollView>
