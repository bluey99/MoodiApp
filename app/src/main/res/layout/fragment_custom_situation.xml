<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Full-height alignment container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp">

        <!-- Centered content (matches Step 1 logic) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Yellow panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/child_panel_background"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Can you tell me what happened?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#085F63"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtHelper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can write it in your own words ðŸ˜Š"
                    android:textSize="14sp"
                    android:textColor="#51787C"
                    android:layout_marginBottom="20dp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/editCustomSituation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What happened?"
                    android:background="@drawable/child_input_box"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textColor="#085F63"
                    android:textColorHint="#7FB7BB"
                    android:minHeight="120dp"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!-- Cancel -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancelCustomSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#51787C"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/pill_button_selector" />

                <!-- Continue -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnConfirmCustomSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#085F63"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:background="@drawable/pill_button_selector"
                    android:enabled="false"
                    android:alpha="0.4" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</FrameLayout>
