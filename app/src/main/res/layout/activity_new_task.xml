<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F6F7">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="140dp">

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitleNewTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New Task"
                android:textSize="28sp"
                android:paddingTop="50dp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/txtSubtitleNewTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Add something your child will rate"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Task Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•  Task Name :"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtTaskName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="Give it a name"
                    android:background="@drawable/rounded_white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Display When (Picker) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•  Display When :"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtDisplayWhen"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="Choose date and time"
                    android:background="@drawable/rounded_white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />
            </LinearLayout>

            <!-- Discussion Prompts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•  Discussion\n   Prompts :"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtDiscussionPrompts"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="Ask your child questions"
                    android:gravity="top|start"
                    android:background="@drawable/rounded_white"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:overScrollMode="never" />
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnSaveTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textSize="14sp"
                    android:paddingHorizontal="28dp"
                    android:paddingVertical="10dp"
                    android:backgroundTint="#C7F0CF"
                    android:textColor="#2F6A43"
                    app:cornerRadius="24dp"
                    android:layout_marginBottom="20dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnGoBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="← Go Back"
                    android:textSize="14sp"
                    android:paddingHorizontal="28dp"
                    android:paddingVertical="10dp"
                    android:backgroundTint="#C7F0CF"
                    android:textColor="#2F6A43"
                    app:cornerRadius="24dp"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
