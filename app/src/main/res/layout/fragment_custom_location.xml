<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F4F4"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- MAIN CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/child_panel_background"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where did it happen?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#085F63"
                android:layout_marginBottom="8dp" />

            <!-- Helper text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can write a short place name"
                android:textSize="14sp"
                android:textColor="#51787C"
                android:layout_marginBottom="16dp" />

            <!-- Input -->
            <EditText
                android:id="@+id/editCustomLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="For example: playground"
                android:background="@drawable/child_input_box"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="#085F63"
                android:maxLength="25"
                android:inputType="text"
                android:importantForAutofill="no" />


            <!-- Character counter -->
            <TextView
                android:id="@+id/txtCharCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 25"
                android:textSize="12sp"
                android:textColor="#51787C"
                android:layout_marginTop="6dp"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <!-- Back -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBackToWhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#51787C"
                android:background="@drawable/pill_button_selector"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- Continue -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirmCustomLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#085F63"
                android:background="@drawable/pill_button_selector"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="16dp"
                android:enabled="false"
                android:alpha="0.4" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
