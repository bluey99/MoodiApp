<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up to Moodi"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4C5257"
            android:layout_marginTop="20dp"/>

        <!-- SUBTITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where emotions make sense — together."
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"/>

        <!-- WHITE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="30dp"
            android:padding="24dp"
            android:orientation="vertical"
            android:elevation="3dp"
            android:clipToOutline="true">

            <!-- YOUR INFO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Info:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4C5257"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/password_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Name"
                android:background="@drawable/password_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:background="@drawable/password_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

            <!-- CHILD INFO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child’s Info:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4C5257"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtChildName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Child’s Name"
                android:background="@drawable/password_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtChildId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Child’s ID"
                android:background="@drawable/password_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

            <!-- SIGN UP BUTTON -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="Sign Up"
                android:textSize="16sp"
                android:textColor="#085F63"
                android:background="@drawable/btn_login_rounded"
                android:backgroundTint="@null"
                android:layout_gravity="center"/>

        </LinearLayout>

        <!-- CANCEL -->
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="#4C5257"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
