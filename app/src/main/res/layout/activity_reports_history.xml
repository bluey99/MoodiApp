<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F6F7">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Reports History"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="All the reports you’ve written to the therapist"
                android:textSize="14sp" />

            <!-- Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnFilterReports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Filter By"
                    android:textSize="13sp"
                    android:textColor="#3E7F6B"
                    android:backgroundTint="#FFFFFF"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="6dp"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- Horizontal scroll for table -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <TableLayout
                    android:id="@+id/tableReportsHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- HEADER -->
                    <TableRow>

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_cell_bg"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Situation Name"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_cell_bg"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Timestamp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Location"
                            android:textStyle="bold"
                            android:background="@drawable/table_cell_bg" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Edit"
                            android:textStyle="bold"
                            android:background="@drawable/table_cell_bg" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Delete"
                            android:textStyle="bold"
                            android:background="@drawable/table_cell_bg" />

                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnGoBackReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="← Go Back"
                android:textSize="14sp"
                android:textColor="#2F6A43"
                android:backgroundTint="#C7F0CF"
                android:paddingHorizontal="28dp"
                android:paddingVertical="10dp"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
