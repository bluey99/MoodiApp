<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F6F7">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="72dp">

            <!-- TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emotional History"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp"/>

            <!-- SUBTITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview of your child's recorded emotions"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- FILTER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <Button
                    android:id="@+id/btnFilterBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Filter By"
                    android:textSize="13sp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="6dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#3E7F6B"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <!-- TABLE -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:fadeScrollbars="false">

                <TableLayout
                    android:id="@+id/tableEmotionHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- HEADER -->
                    <TableRow
                        android:baselineAligned="false">

                        <TextView
                            android:text="Timestamp"
                            android:padding="8dp"
                            android:minWidth="120dp"
                            android:gravity="center"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="Task Name"
                            android:padding="8dp"
                            android:minWidth="120dp"
                            android:gravity="center"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="Emotion"
                            android:padding="8dp"
                            android:minWidth="90dp"
                            android:gravity="center"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="Intensity"
                            android:padding="8dp"
                            android:minWidth="90dp"
                            android:gravity="center"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="Notes"
                            android:padding="8dp"
                            android:minWidth="220dp"
                            android:gravity="center"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="bold"/>
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <!-- BACK -->
            <Button
                android:id="@+id/btnGoBackEmotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Go Back"
                android:textSize="14sp"
                android:paddingHorizontal="28dp"
                android:paddingVertical="10dp"
                android:backgroundTint="#C7F0CF"
                android:textColor="#2F6A43"
                app:cornerRadius="24dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
