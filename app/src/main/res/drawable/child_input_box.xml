<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (light cream/yellowish to match your app) -->
    <solid android:color="#FFFDEB" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Thin teal border -->
    <stroke
        android:width="2dp"
        android:color="#A5D6D6" />

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
